<html lang="en">
<%- include('./partials/header.ejs')%>
<body onload="change_height()" onresize="change_height()">  
    <div class="content">
        <div class="title-page-title"> 
            <h1 class="title-text"> S p o t i f y &nbsp; G r e e n h o u s e </h1>
        </div>
        <img id="title-flower">
        <div id="login-wrapper">
            <a href="/login" id="login-button-link"> 
                <img id="login-button" src="login-button.png">
                <img id="login-button-hover" src="login-button-hover.png">
            </a>
        </div>
        <div class="footer-info">
            <p>Made by Jonathan Chiu</p>
            <p>Inspired by <a href="https://receiptify.herokuapp.com/">Receiptify</a></p>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>    
    <script>
        function change_height() {
            var c1 = $('.content').width();
            $('.content').css({
                'height': c1*.47 + 'px'
            });
        }
    </script>
    <script>
        var randomNum = Math.floor(Math.random() * 3);
        switch (randomNum) {
            case 0:
                document.getElementById("title-flower").src = "sunflower-minute.png";
                break;
            case 1:
                document.getElementById("title-flower").src = "redflower-minute.png";
                break;
            case 2:
                document.getElementById("title-flower").src = "purpleflower-minute.png";
                break;
        }
    </script>
    <br><br>
</body>
</html>